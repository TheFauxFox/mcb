{
  "name": "mcb",
  "version": "1.1.6",
  "description": "",
  "main": "index.js",
  "type": "module",
  "bin": "./build/cli.js",
  "files": [
    "./build/src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    ".": "tsx src/index.ts",
    "test": "jest",
    "dev": "tsc-watch --onSuccess 'node ./build/cli.js'",
    "clean": "rimraf build/",
    "lint": "prettier -c src/**/* && eslint src/**/*",
    "compile": "pkg --no-bytecode --public-packages '*' --public -C Brotli -c ./package.json ./build/src/index.js -o ./build/dist/MinecraftConsoleBot --options='no-warnings=true'",
    "build": "npm run clean && tsc && npm run compile",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argparse": "^2.0.1",
    "blessed": "^0.1.81",
    "ink": "^4.4.1",
    "ink-table": "^3.1.0",
    "ink-text-input": "^5.0.1",
    "mineflayer": "^4.20.1",
    "react": "^18.3.1",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^5.0.0",
    "@types/argparse": "^2.0.16",
    "@types/blessed": "^0.1.25",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vdemedes/prettier-config": "^2.0.1",
    "@yao-pkg/pkg": "^5.11.5",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tsx": "^4.8.2",
    "typescript": "^5.4.5"
  },
  "pkg": {
    "targets": [
      "node20-linux",
      "node20-win"
    ],
    "assets": "node_modules/blessed/**/*"
  }
}
