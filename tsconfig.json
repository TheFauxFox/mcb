{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build/js",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "exclude": [
    "./node_modules",
    "./src/test"
  ]
}