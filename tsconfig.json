{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build/",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "extends": "@sindresorhus/tsconfig",
  "exclude": [
    "./node_modules",
    "./src/test"
  ],
  "include": [
    "./src/**/*"
  ]
}